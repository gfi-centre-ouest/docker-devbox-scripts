#!/usr/bin/env bash

SOURCE="$0"
if [ "$SOURCE" = "-bash" ]; then
  SOURCE="${BASH_SOURCE[0]}"
fi

if [ "$(basename "$SOURCE")" = .bash_enter ]; then
  DOCKER_DEVBOX_DIR="$(readlink -f "$SOURCE" | xargs dirname)"
else
  DOCKER_DEVBOX_DIR="$PWD"
fi

BASH_ENTER_CONFIG_FILE="$DOCKER_DEVBOX_DIR/.bash_enter.config"
# shellcheck source=/dev/null
[ -f "$BASH_ENTER_CONFIG_FILE" ] && . "$BASH_ENTER_CONFIG_FILE"

if [ -e "${DOCKER_DEVBOX_SCRIPTS_PATH}" ]; then
  if [ "$(basename "$SOURCE")" = .bash_leave ]; then
    DOCKER_DEVBOX_DIR="$(readlink -f "$SOURCE" | xargs dirname)"
  else
    DOCKER_DEVBOX_DIR="$PWD"
  fi

  # shellcheck source=/dev/null
  . "${DOCKER_DEVBOX_SCRIPTS_PATH}"/.bash_leave.core
else
  echo "$(tput setaf 1)docker-devbox doesn't seems to be installed ($DOCKER_DEVBOX_SCRIPTS_PATH is missing). Check your docker-devbox installation.$(tput sgr0)"
  echo "$(tput setaf 3)More information at https://github.com/gfi-centre-ouest/docker-devbox$(tput sgr0)"
fi
